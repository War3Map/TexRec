<Window x:Class="TexRec.ImageView.ImageForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TexRec.ImageView"
        mc:Ignorable="d"
        Title="Просмотр изображений" Height="423" Width="573.5">
    <Grid>
        <Menu Height="20" VerticalAlignment="Top">
            <MenuItem Header="Файл" Height="20" Width="56">
                <MenuItem Header="Открыть" HorizontalAlignment="Left" Height="24" Width="145"/>
                <MenuItem Header="Сохранить" HorizontalAlignment="Left" Height="24" Width="145"/>
                <MenuItem Header="Сохранить как.." HorizontalAlignment="Left" Height="24" Width="145"/>
            </MenuItem>
            <MenuItem Header="Правка" Height="20" Width="60"/>
            <MenuItem Header="Фильтры" Height="20" Width="100"/>
        </Menu>
        <Image Margin="0,20,0,0" Source="{Binding ImageFile}"/>

    </Grid>
</Window>
